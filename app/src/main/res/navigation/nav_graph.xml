<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- SPLASH -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.vgroup.vgroupstore.presentation.splash.SplashFragment"
        android:label="splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_splashFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <!-- LOGIN -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.vgroup.vgroupstore.presentation.login.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />

        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <!-- SIGNUP -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.vgroup.vgroupstore.presentation.signup.SignupFragment"
        android:label="Signup">

        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signupFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_signupFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/signupFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- DASHBOARD (BOTTOM NAV HOME) -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.vgroup.vgroupstore.presentation.dashboard.DashboardFragment"
        android:label="Dashboard">

        <action
            android:id="@+id/action_dashboardFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_cartFragment"
            app:destination="@id/cartFragment" />

        <argument
            android:name="user"
            app:argType="com.vgroup.vgroupstore.domain.model.UserProfile"
            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>

    <!-- SEARCH -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.vgroup.vgroupstore.presentation.search.SearchFragment"
        android:label="Search">
    </fragment>

    <!-- CART -->
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.vgroup.vgroupstore.presentation.cart.CartFragment"
        android:label="My Cart">
    </fragment>

    <!-- PROFILE (BOTTOM NAV ACCOUNT) -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.vgroup.vgroupstore.presentation.profile.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
